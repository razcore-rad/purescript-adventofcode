start :: Tuple Int Int
start = Tuple 0 0

houses :: Set (Tuple Int Int)
houses = S.singleton start

toInstruction :: Char -> Tuple Int Int
toInstruction c =
  case c of 
       '^' -> Tuple ( 0) ( 1)
       '>' -> Tuple ( 1) ( 0)
       'v' -> Tuple ( 0) (-1)
       '<' -> Tuple (-1) ( 0)
       _   -> Tuple ( 0) ( 0)

visit :: Array Char -> Set (Tuple Int Int)
visit = foldl (flip S.insert) houses <<< scanl (+) start <<< map toInstruction

input' :: Array Char
input' = toCharArray input


part1 :: Int
part1 = S.size <<< visit $ input'


takeBy :: âˆ€ a. (Int -> Boolean) -> Array a -> Array a
takeBy pred as = catMaybes do
   i <- range 0 $ length as - 1
   guard $ pred i
   pure $ as !! i

part2 :: Int
part2 = S.size $ (visit <<< takeBy even $ input') `union` (visit <<< takeBy odd $ input')

